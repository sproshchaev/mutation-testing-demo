<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.prosoft</groupId>
    <artifactId>mutation-testing-demo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <pitest.version>1.20.2</pitest.version>
        <junit.version>5.10.0</junit.version>
    </properties>

    <dependencies>
        <!-- JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- ðŸ”½ Ð”Ð¾Ð±Ð°Ð²Ð»ÐµÐ½Ð¾: Ð¿Ð»Ð°Ð³Ð¸Ð½ Ð´Ð»Ñ Ð¿Ð¾Ð´Ð´ÐµÑ€Ð¶ÐºÐ¸ JUnit 5 Ð² PITest -->
        <dependency>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-junit5-plugin</artifactId>
            <version>1.2.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- ÐšÐ¾Ð¼Ð¿Ð¸Ð»ÑÑ†Ð¸Ñ Ð¿Ð¾Ð´ Java 21 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                </configuration>
            </plugin>

            <!-- Surefire Plugin â€” Ð´Ð»Ñ Ð·Ð°Ð¿ÑƒÑÐºÐ° ÑŽÐ½Ð¸Ñ‚-Ñ‚ÐµÑÑ‚Ð¾Ð² -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
            </plugin>

            <!-- PITest Plugin â€” Ð¼ÑƒÑ‚Ð°Ñ†Ð¸Ð¾Ð½Ð½Ð¾Ðµ Ñ‚ÐµÑÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ðµ -->
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>${pitest.version}</version>
                <configuration>
                    <targetClasses>
                        <param>com.prosoft.*</param>
                    </targetClasses>
                    <targetTests>
                        <param>com.prosoft.*</param>
                    </targetTests>
                    <avoidCallsTo>
                        <avoidCallsTo>java.lang.System</avoidCallsTo>
                        <avoidCallsTo>java.lang.Runtime</avoidCallsTo>
                    </avoidCallsTo>
                    <!-- ðŸ”½ ÐšÐ»ÑŽÑ‡ÐµÐ²Ð¾Ðµ: Ð°ÐºÑ‚Ð¸Ð²Ð°Ñ†Ð¸Ñ Ð¿Ð¾Ð´Ð´ÐµÑ€Ð¶ÐºÐ¸ JUnit 5 -->
                    <pluginModules>
                        <pluginModule>org.pitest:pitest-junit5-plugin:1.2.3</pluginModule>
                    </pluginModules>
                    <!-- ðŸ”¼ -->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>